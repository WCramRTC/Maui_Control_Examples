<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Control_Examples.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry Text="This is a text box" 
                   AutomationProperties.HelpText="This is a entry box"
                   />

            <Label Text="This is a Label" 
                   />

            <Button Text="This is a button"
                    x:Name="btnClicked"
                    Clicked="btnClicked_Clicked"
                    />
            
            <Editor Text="This is a Editor" 
                    />

            <CheckBox 
                IsChecked="True"
                />

            <StackLayout>
                <RadioButton Content="Option 1"
                 IsChecked="true" 
                             />
                <RadioButton Content="Option 2"
                             />
            </StackLayout>

            <ListView
                x:Name="lvItems" />

            <Picker Title="Select an option"
                SelectedIndex="0"
                TitleColor="Gray" 
                x:Name="pikNames"
                    />



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
